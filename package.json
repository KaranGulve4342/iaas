{
  "name": "iaas",
  "version": "1.0.0",
  "description": "Node.js Express API for acquisitions system",
  "main": "src/index.js",
  "type": "module",
  "imports": {
    "#src/*": "./src/*",
    "#config/*": "./src/config/*",
    "#controllers/*": "./src/controllers/*",
    "#models/*": "./src/models/*",
    "#middleware/*": "./src/middleware/*",
    "#utils/*": "./src/utils/*",
    "#routes/*": "./src/routes/*",
    "#services/*": "./src/services/*",
    "#validations/*": "./src/validations/*"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "dev:docker": "sh ./scripts/dev.sh",
    "prod:docker": "sh ./scripts/prod.sh",
    "db:migrate": "drizzle-kit migrate",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KaranGulve4342/iaas.git"
  },
  "keywords": [
    "node",
    "express",
    "api",
    "acquisitions"
  ],
  "author": "Karan Gulve",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/KaranGulve4342/iaas/issues"
  },
  "homepage": "https://github.com/KaranGulve4342/iaas#readme",
  "dependencies": {
    "@arcjet/inspect": "^1.0.0-beta.11",
    "@arcjet/node": "^1.0.0-beta.11",
    "@neondatabase/serverless": "^1.0.1",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "winston": "^3.17.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.3",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "jest": {
    "preset": "default",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [".js"],
    "globals": {
      "NODE_OPTIONS": "--experimental-vm-modules"
    },
    "transform": {},
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/server.js",
      "!src/config/database.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
  }
}
